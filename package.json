{
  "name": "synesthesia-webterminal",
  "version": "1.0.0",
  "description": "Auto-detecting keyword colorizer for web terminal",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently -n server,vite -c blue,green \"node server.js\" \"vite\"",
    "dev:server": "node server.js",
    "dev:client": "vite",
    "build": "vite build",
    "start": "NODE_ENV=production node server.js",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-web-links": "^0.12.0",
    "@xterm/xterm": "^6.0.0",
    "express": "^4.18.2",
    "highlight.js": "^11.11.1",
    "marked": "^17.0.1",
    "node-pty": "^1.1.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "ws": "^8.16.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.3",
    "concurrently": "^9.2.1",
    "jest": "^30.2.0",
    "jsdom": "^28.0.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
